{
  "name": "ftalk-electron",
  "productName": "FTALK",
  "version": "1.0.6",
  "description": "Chat FTALK",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "electron-dev": "electron .",
    "pack-ios": "electron-packager . --platform=darwin --icon=assets/logo.png --overwrite=true --out=dist",
    "pack-ios-prod": "electron-packager . --platform=darwin --icon=assets/logo.png --overwrite=true --out=dist",
    "pack-linux": "electron-packager . --platform=linux --icon=assets/logo.png --overwrite=true --out=dist",
    "pack-windows": "electron-packager . --platform=win32 --icon=assets/logo.ico --overwrite=true --out=dist",
    "installer-ios": "electron-installer-dmg ./dist/FTALK-darwin-x64/FTALK.app FTALK",
    "dist": "build",
    "publish": "build --win --mac -p always",
    "publish-windows": "build --win -p always",
    "publish-mac": "build --mac -p always"
  },
  "author": "Giovanni Pucci <giobaer2011@live.com> (http://www.finer.com.br)",
  "license": "ISC",
  "build": {
    "appId": "br.com.finer.ftalk",
    "asar": true,
    "dmg": {
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "giovanni-finer",
        "repo": "ftalk-electron"
      }
    ]
  },
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-builder": "20.38.4",
    "electron-installer-dmg": "^2.0.0",
    "electron-packager": "^13.0.1",
    "electron-winstaller": "^2.7.0",
    "electron-wix-msi": "^2.1.1"
  },
  "dependencies": {
    "auto-launch": "5.0.5",
    "electron-is-dev": "^1.0.1",
    "electron-log": "2.2.17",
    "electron-updater": "4.0.6",
    "electron-windows-badge": "^1.0.4",
    "node-notifier": "^5.3.0",
    "uuid": "^3.3.2"
  }
}
